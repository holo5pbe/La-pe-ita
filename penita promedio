package promedio;

import java.util.Scanner;

/**
 *
 * @author rodri
 */
public class promedioclase {
     /**
     * @param args the command line arguments
     */
     public static void main(String[]args){
        /*Promedio de productos
        
        */
        float acum = 1; //Acumulado
        float productos = 0;
        Scanner r = new Scanner(System.in);
        System.out.println("Ingrese la cantidad de productos a promediar");
        float cn = r.nextFloat(); // cantidad de productos
        
          while(acum<=cn){
             System.out.println("Ingrese el valor del producto: "+acum);
             
             float n = r.nextFloat();
             productos += n;
             acum++;
                     
          }
          float promedio = productos / cn; 
          
          System.out.println("El promedio es:" +promedio);
          
    }
}
